/**index.wxss**/
.index-container{
	width:100%;
	height:100%;
}
.top-banner{
	width:100%;
	height:378rpx;
	overflow:hidden;
}
.top-lunbo,.slide-item{
	width:100%;
	height:100%;
}
.slide-item image{
	display:block;
	width:100%;
	height:100%;
}
.selection{
	border-bottom: 5px solid #ddd;
}
.item-title{
	width:100%;
	height:60rpx;
	line-height:60rpx;
	font-size:26rpx;
	color:#333333;
	border-left:2px solid #35b558;
	padding:0 24rpx 0 22rpx;
	margin:25rpx 0 16rpx 0;
	box-sizing:border-box;
	display:flex;
	justify-content:space-between;
	align-items:center;
}
.text-all{
	color: green;
  font-size: 22rpx;
}
.content{
	display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   justify-content: center;
   padding-bottom:38rpx;
}
.content-item{
	width:45%;
	height:250rpx;
	margin:5px;
	position:relative;
	overflow:hidden;
}
.content-item image{
	display:block;
	width:100%;
	height:100%;
}
.content-item .content-item-text{
	position:absolute;
	left:0;
	bottom:10rpx;
	width:100%;
	padding:0 8rpx;
	box-sizing:border-box;
	white-space:nowrap;
	overflow:hidden;
	text-overflow:ellipsis;
	font-size:18rpx;
	color:#333;
}
.list-item{
	width:100%;
	display:flex;
	flex-direction:column;
	justify-content:center;
}
.list-item-images{
	display:block;
	width:100%;
	height:265rpx;
	position:relative;
	z-index:2;
}
.list-item-images-img{
	display:block;
	width:100%;
	height:100%;
}
.avatar{
	position:absolute;
	right:32rpx;
	bottom:-14px;
	width:64rpx;
	height:64rpx;
	overflow:hidden;
	border-radius:50%;
}
.list-item-text{
	padding:30rpx 24rpx;
}
.list-item-text-title{
	font-size:28rpx;
	color:#292929;
	width:100%;
	height:36rpx;
	line-height:36rpx;
	white-space:nowrap;
	overflow:hidden;
	font-weight:bold;
	text-overflow:ellipsis;
}
.list-item-text-content{
	width:100%;
	line-height:30rpx;
	font-size:20rpx;
	color:#adadad;
	margin-top:10rpx;
}